<simulation verbosity="medium">
   <output prefix="simulation">
      <properties stride="10" filename="out">  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv, volume, ensemble_temperature ] </properties>
      <trajectory filename="pos" stride="100" bead="0"> positions{angstrom} </trajectory>
      <checkpoint stride="4000"/>
   </output>
   <total_steps> 400000 </total_steps>
   <prng><seed>31415</seed></prng>
   <ffsocket name="qtip4pf" mode="unix" matching="any">
       <address> f1 </address>
       <latency> 1e-3 </latency> 
   </ffsocket>
   <ffsocket name="harmonic" mode="unix" matching="any">
        <address> f2 </address>
        <latency> 1e-3 </latency>
   </ffsocket>   
   <system_template>
       <labels>   [ IDX, TEMP, HAM] </labels>
       <instance> [ 0, 1000, 1.0 ] </instance>
       <instance> [ 1, 1000, 0.5 ] </instance>
       <instance> [ 2, 1000, 0.7 ] </instance>
       <instance> [ 3, 1000, 1.4 ] </instance>
       <instance> [ 4, 1000, 2.0 ] </instance>
       <instance> [ 5, 1000, 2.8 ] </instance>
       <instance> [ 6, 1000, 5.0 ] </instance>
       <instance> [ 7,   700, 1   ] </instance>
       <instance> [ 8,  1400, 1   ] </instance>
       <instance> [ 9,  2000, 1   ] </instance>
       <instance> [10,   700, 0.5 ] </instance>
       <instance> [11,  1400, 0.5 ] </instance>
       <instance> [12,  2000, 0.5 ] </instance>
       <instance> [13,   700,  5  ] </instance>
       <instance> [14,  1400,  5  ] </instance>
       <instance> [15,  2000,  5  ] </instance>
       <template>
           <system prefix="IDX">
              <initialize nbeads="2">
                  <file mode="xyz"> init-IDX.xyz </file>
                  <cell mode="abcABC"> [100, 100, 100, 90, 90, 90] </cell>
                 <velocities mode="thermal" units="kelvin"> TEMP </velocities>
              </initialize>
              <forces>
                 <force forcefield ="qtip4pf" nbeads="4"> </force>
                 <force forcefield ="harmonic" nbeads="1"> </force>                 
              </forces> 
              <motion mode="dynamics">
                 <dynamics mode="nvt" splitting="baoab">
                    <timestep units="femtosecond"> 0.5 </timestep>
                    <thermostat mode="multi">
   <thermostat mode='gle'>
    <A shape='(7,7)'>
      [   3.066499733425e-4,    3.918645326758e-3,    3.970075856000e-4,    5.751233006221e-4,    1.951026735328e-4,   -7.608506711666e-6,   -1.210898210415e-4, 
   1.184793718134e-4,    1.614857548113e-2,   -1.173222881437e-2,    1.841044550653e-3,    1.343912309414e-3,   -3.172717109634e-4,    6.002524263036e-4, 
   5.750302446333e-4,    1.173222881437e-2,    5.400133459112e-3,    5.080790031328e-3,   -1.821095565240e-4,    1.157512054122e-3,   -2.399444162855e-3, 
  -5.882696333479e-4,   -1.841044550653e-3,   -5.080790031328e-3,    5.323313874683e-5,   -1.512323974504e-5,    1.380014399158e-4,    1.857314941468e-4, 
  -1.952182693579e-4,   -1.343912309414e-3,    1.821095565240e-4,    1.512323974504e-5,    2.805135356067e-7,   -4.569829279464e-5,   -1.582697298437e-5, 
   7.599439450979e-6,    3.172717109634e-4,   -1.157512054122e-3,   -1.380014399158e-4,    4.569829279464e-5,    8.953463463337e-8,    1.048302791673e-4, 
   1.210947553818e-4,   -6.002524263036e-4,    2.399444162855e-3,   -1.857314941468e-4,    1.582697298437e-5,   -1.048302791673e-4,   6.319906026701e-12
     ]
    </A>
  </thermostat>
                    <thermostat mode="pile_g">
                        <tau units="femtosecond"> 10 </tau>
                    </thermostat>
                    </thermostat>
                 </dynamics>
              </motion>
              <ensemble>
                 <temperature units="kelvin"> TEMP </temperature>
                 <hamiltonian_weights> [ 1.0, HAM ] </hamiltonian_weights>
              </ensemble>
           </system>
       </template>
   </system_template>

   <smotion mode="remd">
      <remd>
         <stride> 1 </stride>
      </remd>
   </smotion>   
</simulation>
