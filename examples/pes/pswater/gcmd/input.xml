<simulation verbosity="medium">
  <output prefix="cmd">
    <properties stride="1" filename="out"> [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, kinetic_md] </properties>
    <trajectory filename="xc" stride="2" format="xyz" cell_units="angstrom"> x_centroid{angstrom} </trajectory>
    <trajectory filename="pos" stride="20" format="xyz" cell_units="angstrom"> positions{angstrom} </trajectory>
    <trajectory filename="pc" stride="2" format="xyz"> p_centroid </trajectory>    
  </output>
  <total_steps>40000</total_steps>
  <prng>
    <seed>32345</seed>
  </prng>
  <ffsocket name="driver" mode="unix" pbc="false">
    <address>driver</address> <latency>0.001</latency>
  </ffsocket>
  <system>
    <initialize nbeads="16">
      <file mode="xyz" units='angstrom'> h2o.xyz </file> 
      <cell mode='abc' units='angstrom'> [ 10.0, 10.0, 10.0 ] </cell>
      <velocities mode="thermal" units="kelvin"> 100 </velocities>
    </initialize>
    <forces>
      <force forcefield='driver'>  </force>
    </forces>
    <ensemble>
      <temperature units="kelvin">100</temperature>
    </ensemble>
    <motion mode="gcmd">
        <fixcom> False </fixcom>  
      <gcmd mode='cmd'>
        <thermostat mode="pile_l">
          <tau units="femtosecond">1e3</tau>
          <pile_lambda> 0.5 </pile_lambda>
        </thermostat>
        <timestep units="femtosecond"> 0.25 </timestep>
        <stride> 1 </stride>
        <nsamples> 100 </nsamples>
      </gcmd>
    </motion>
  </system>
</simulation>
