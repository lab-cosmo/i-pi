<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ step, time{femtosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{bar}, volume, virial_md ] </properties>
    <trajectory stride='1' filename='pos' cell_units='angstrom'> positions{angstrom} </trajectory>
    <trajectory stride='1' filename='xtra'> extras </trajectory>    
  </output>
  <total_steps>125</total_steps>
  <prng>
    <seed>3141</seed>
  </prng>
  <ffsocket name='pw' mode='inet'>
    <address>localhost</address>
    <port>3142</port>
    <timeout>100</timeout>
    <latency> 0.01</latency>
        <!-- 
        since version 7.0, q-e allows settings on the fly some of the calculation flags.
        this is just a demo switching off stress calculation (which is not strictly necessary
        for NVT) and return BEEFvdw ensemble energies, a feature which is under development
        at the time of preparation of this example.
        -->
    <parameters>
        { lstress: 0, lmovecell: 0, lforce:1, lensemb:1 } 
    </parameters>
  </ffsocket>
  <system>
    <forces>
        <force forcefield='pw'/>
    </forces>
    <initialize nbeads='1'>
      <file mode='xyz' units='angstrom'> init.xyz </file>
      <cell units='angstrom'>[3.567, 0, 0, 0, 3.567, 0, 0, 0, 3.567] </cell>
      <velocities mode='thermal' units='kelvin'> 150 </velocities>
    </initialize>
    <ensemble>
      <temperature units='kelvin'>150</temperature>
      <pressure units='bar'> 10 </pressure>
    </ensemble>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <thermostat mode='langevin'>
          <tau units='femtosecond'>100</tau>
        </thermostat>
        <timestep units='femtosecond'>1</timestep>
      </dynamics>
      <fixcom>True</fixcom>
    </motion>
  </system>
</simulation>
